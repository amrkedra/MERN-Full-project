pipeline {
    agent { label 'master' }

    stages {
        stage('Clone the Repo & Go to Terraform Folder') {
            steps {
                script {
                    // Clone the repository
                    git branch: 'main', url: 'https://github.com/amrkedra/MERN-Full-project.git'
                    
                    // Change directory to Terraform
                    dir('MERN-Full-project/Terraform') {
                        // Now you can run Terraform commands here
                    }
                }
            }
        }

        stage('Terraform Init') {
            steps {
                script {
                    def tfHome = tool name: 'Terraform 40926', type: 'TerraformInstallation'
                    env.PATH = "${tfHome}:${env.PATH}"
                    sh 'terraform --version'
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                script {
                    sh 'terraform plan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                input 'Approve Terraform Apply?'
                script {
                    sh 'terraform apply -auto-approve'
                }
            }
        }
    }

    post {
        always {
            node('master') { // Specify the agent label here
                archiveArtifacts artifacts: '**/terraform.tfstate', fingerprint: true
            }
        }
    }
}
