pipeline {
    agent { label 'master' } 

    stages {
        stage("Clone the Repo & Go to Terraform Folder") {
            steps {
                script {
                    // Clone the repository
                    git branch: 'main', url: 'https://github.com/amrkedra/MERN-Full-project.git'
                    
                    // Change directory to Terraform
                    dir('MERN-Full-project/Terraform') {
                        // Run Terraform commands here
                    }
                }
            }
        }

        stage('Terraform Init') {
            steps {
                script {
                    // Use the shell to run Terraform init
                    sh '''
                    terraform --version
                    terraform init
                    '''
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                script {
                    // Run Terraform plan
                    sh 'terraform plan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                input 'Approve Terraform Apply?'
                script {
                    // Run Terraform apply
                    sh 'terraform apply -auto-approve'
                }
            }
        }
    }

    post {
        always {
            // Archive Terraform state file
            archiveArtifacts artifacts: '**/terraform.tfstate', fingerprint: true
        }
    }
}
