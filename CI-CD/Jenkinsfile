pipeline {
    agent { label "master" }

    environment {
        AWS_ACCESS_KEY_ID = credentials('Access Key ID') // Your Access Key ID credential ID
        AWS_SECRET_ACCESS_KEY = credentials('Secret Access Key') // Your Secret Access Key credential ID
        AWS_DEFAULT_REGION = 'me-south-1' // Optional: Set your desired AWS region
    }

    stages {
        stage("Clone the Repo & Go to Terraform Folder") {
            steps {
                script {
                    // Clone the repository
                    git branch: 'main', url: 'https://github.com/amrkedra/MERN-Full-project.git'
                }
            }
        }

        stage('Terraform Init') {
            steps {
                dir('MERN-Infra-providing/Terraform') {  // Ensure you're in the right directory
                    script {
                        // Run Terraform init
                        sh 'terraform init --upgrade'
                    }
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('MERN-Infra-providing/Terraform') {  // Ensure you're in the right directory
                    script {
                        // Run Terraform plan
                        sh 'terraform plan'
                    }
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                input 'Approve Terraform Apply?'
                dir('MERN-Infra-providing/Terraform') {  // Ensure you're in the right directory
                    script {
                        // Run Terraform apply
                        sh 'terraform apply -auto-approve'
                    }
                }
            }
        }
    }

    post {
        always {
            // Archive Terraform state files
            archiveArtifacts artifacts: '**/terraform.tfstate', fingerprint: true
        }
    }
}
